{
  "name": "postgres",
  "displayName": "postgres",
  "description": "none for now ",
  "version": "0.0.2",
  "engines": {
    "vscode": "^1.105.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/septemhill/vscodepg"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "postgres-container",
          "title": "Postgres",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "postgres-container": [
        {
          "id": "postgresView",
          "name": "Connections",
          "icon": "media/icon.svg"
        }
      ]
    },
    "commands": [
      {
        "command": "postgres.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "postgres.addConnection",
        "title": "Add Connection",
        "icon": "$(add)"
      },
      {
        "command": "postgres.connect",
        "title": "Connect to Database",
        "icon": "$(plug)"
      },
      {
        "command": "postgres.editConnection",
        "title": "Edit Connection",
        "icon": "$(edit)"
      },
      {
        "command": "postgres.deleteConnection",
        "title": "Delete Connection",
        "icon": "$(trash)"
      },
      {
        "command": "db-extension.openBookmark",
        "title": "Open Bookmark",
        "icon": "$(book)"
      },
      {
        "command": "postgres.editBookmark",
        "title": "Edit Bookmark",
        "icon": "$(edit)"
      },
      {
        "command": "postgres.deleteBookmark",
        "title": "Delete Bookmark",
        "icon": "$(trash)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "postgres.addConnection",
          "when": "view == postgresView",
          "group": "navigation",
          "icon": "$(add)"
        }
      ],
      "view/item/context": [
        {
          "command": "postgres.connect",
          "when": "view == postgresView && viewItem == connectionItem",
          "group": "inline",
          "icon": "$(plug)"
        },
        {
          "command": "postgres.editConnection",
          "when": "view == postgresView && viewItem == connectionItem",
          "group": "inline",
          "icon": "$(edit)"
        },
        {
          "command": "postgres.deleteConnection",
          "when": "view == postgresView && viewItem == connectionItem",
          "group": "inline",
          "icon": "$(trash)"
        },
        {
          "command": "postgres.editBookmark",
          "when": "view == postgresView && viewItem == bookmarkItem",
          "group": "inline",
          "icon": "$(edit)"
        },
        {
          "command": "postgres.deleteBookmark",
          "when": "view == postgresView && viewItem == bookmarkItem",
          "group": "inline",
          "icon": "$(trash)"
        }
      ]
    }
  },
  "scripts": {
    "vscode:vsce": "vsce package --no-dependencies",
    "vscode:prepublish": "pnpm run package",
    "compile": "node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.10.0",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@types/redis": "^4.0.10",
    "@types/vscode": "^1.105.0",
    "@types/vscode-webview": "^1.57.5",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.12",
    "eslint": "^8.57.1",
    "npm-run-all": "^4.1.5",
    "typescript": "5.8.3"
  },
  "dependencies": {
    "@codemirror/lang-sql": "^6.10.0",
    "@codemirror/theme-one-dark": "^6.1.3",
    "@types/pg": "^8.15.6",
    "@uiw/codemirror-theme-vscode": "^4.25.3",
    "@uiw/react-codemirror": "^4.25.3",
    "pg": "^8.16.3",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "redis": "^5.9.0"
  }
}